welcome <%= @player.username %>
<sub><a href="/logout">log out</a></sub><br></br>

<a href="/player/<%= @player.username %>">back to your homepage</a><br></br>
editing game played on <%= @game.datetime %><br></br>


<form method="post" action="/game/<%= @game.datetime %>/edit">
  <input type="hidden">

  <div class="four">
    change date<br></br>
    year <input type="text" name="game_date[year]">
    month <input type="text" name="game_date[month]">
    day <input type="text" name="game_date[day]"><br></br>
  </div>

  <div class="one">
    team 1 <br></br>
    <%= @player.team.name %>
  </div> <!-- one -->

  <div class="three">
    team 2<br></br>
    <% Team.all.each do |y| %>
      <% if @player.team != y %>
        <input type="radio" name="away_team" value="<%= y.name %>"><%= y.name %><br></br>
      <% end %>
    <% end %>
  </div> <!-- three -->

  <div class="four">
    <input type="submit" value="edit goals">
  </div> <!-- four -->
</form>

